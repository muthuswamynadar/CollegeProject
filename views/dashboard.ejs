<% layout('/layouts/boilerplate') %>
<!-- dashboard.ejs -->
<body >
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-white mb-3" style="background-color: rgba(39, 39, 39, 0.327);">
                    <div class="card-body">
                        <h5 class="card-title">Total Links</h5>
                        <h2 class="card-text"><%= totalLinks %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-white mb-3" style="background-color: rgba(224, 83, 55, 0.701);">
                    <div class="card-body">
                        <h5 class="card-title">Total Profile Views</h5>
                        <h2 class="card-text"><%= totalProfileViews %></h2>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="mb-3 text-white">Link Statistics</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered" style="background-color: rgba(255, 255, 255, 0.9);">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Link Title</th>
                        <th scope="col">URL</th>
                        <th scope="col">Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% linksData.forEach(link => { %>
                        <tr>
                            <td><%= link.title %></td>
                            <td><a href="<%= link.url %>" target="_blank" class="text-decoration-none"><%= link.url %></a></td>
                            <td><span class="badge bg-secondary"><%= link.clicks %></span></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

   
</body>